model CPO {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  type      String
  rif       String
  name      String
  gender    String
  birthdate DateTime
  name_commercial String
  address   String
  phone     String
  email     String
  observations String
  id_categories_cpo String  @db.ObjectId
  id_sellers        String  @db.ObjectId
  marketing_environment String
  id_accounting_accounts String  @db.ObjectId
  auxiliary1 String
  auxiliary2 String
  bank_accounts String
  id_PaymentConditions String?  @db.ObjectId
  type_taxpayer String
  retention_percentage_iva Float
  id_RetentionISLRConcepts String?  @db.ObjectId
  automatic_islr Boolean
  createdAt DateTime @default(now())
  last_visit DateTime
  blockade Int
  observations_blockade String

  // 🔹 Relación: un CPO puede tener muchas PaymentConditions
  paymentConditions PaymentConditions[]
}


model CategoriesCPO {
  id                      String              @id @default(auto()) @map("_id") @db.ObjectId
  name                    String
  credit_limit            Int
  credit_terms            Int
  discount_percentage     Float
  id_accounting_accounts  String              @db.ObjectId
  auxiliary1              String
  auxiliary2              String
  deadline_day            Int
  createdAt               DateTime            @default(now())

  // Relación con AccountingAccounts
  accountingAccount       AccountingAccounts  @relation(fields: [id_accounting_accounts], references: [id])
}

model Sellers {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  id_CPO String  @db.ObjectId
  name      String
  rif       String
  address   String
  phone     String
  email     String   @unique
  type_seller String
  commission Float
  credentials Json
  createdAt DateTime @default(now())
}

model RetentionISLRConcepts {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  code      String
  name      String
  percentage_pn Float
  percentage_pj Float
  subtrahend_amount_pn Float
  subtrahend_amount_pj Float
  createdAt DateTime @default(now())
}

model PaymentConditions {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  id_cpo    String   @db.ObjectId
  days      Int
  discount_percentage Float
  createdAt DateTime @default(now())

  // 🔹 Relación con CPO (muchas condiciones pertenecen a un CPO)
  cpo CPO @relation(fields: [id_cpo], references: [id])
}


