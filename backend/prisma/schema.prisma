generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  rol String?
  id_company Json?
}

model Company {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  id_branch Json?
}

model Branch {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
}

model Categories{
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  discount_percentage Float
  profit_percentage Float
  id_cost_center String  @db.ObjectId
  // band_management Boolean
  createdAt DateTime @default(now())

  accounts Account_Categories[]
  costCenter          CostCenter @relation(fields: [id_cost_center], references: [id])

}

model Account_Categories{
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  id_Categories String  @db.ObjectId
  account_Sales String
  auxiliary1_Sales String
  auxiliary2_Sales String
  account_buy String
  auxiliary1_buy String
  auxiliary2_buy String
  account_consumos String
  auxiliary1_consumos String
  auxiliary2_consumos String
  account_devbuy String
  auxiliary1_devbuy String
  auxiliary2_devbuy String
  account_tax String
  auxiliary1_tax String
  auxiliary2_tax String
  createdAt DateTime @default(now())

  category Categories @relation(fields: [id_Categories], references: [id])
}

model AccountingAccounts {
  id                      String             @id @default(auto()) @map("_id") @db.ObjectId
  name                    String
  code_account            String
  auxiliary1_initials     String
  auxiliary2_initials     String
  category_account        String
  createdAt               DateTime           @default(now())

  // Relación inversa con CategoriesCPO
  categories              CategoriesCPO[]
}

model AuxiliariesAccounts {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  auxiliary_code     String
  createdAt DateTime @default(now())
}

model CostCenter {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  // id_branch           String   @db.ObjectId
  current_cost Int
  average_cost Int
  previous_cost Int
  higher_current_average Int
  lower_current_previous_average Int
  createdAt DateTime @default(now())

  categories Categories[]
}

